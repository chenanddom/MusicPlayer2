<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorred"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/menu_toggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_monkey"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/mMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@mipmap/icon_musicstore"
                    android:layout_marginLeft="30dp"/>
                <RadioButton
                    android:id="@+id/mAmusement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@mipmap/icon_amusement"
                    android:layout_marginLeft="5dp"/>
                <RadioButton
                    android:id="@+id/mVedio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@mipmap/icon_vedio"
                    android:layout_marginLeft="5dp"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_weight="9.9" >
    </FrameLayout>
</LinearLayout>